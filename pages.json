{
    "pages": [ //pages数组中第一项表示应用启动页，参考：https://uniapp.dcloud.io/collocation/pages
        {
            "path": "pages/tab-bar/index",
            "style": {
                "navigationBarTitleText": "%index.title%"
            }
        }, {
            "path": "pages/tab-bar/component",
            "style": {
                "navigationBarTitleText": "%index.component%",
                "enablePullDownRefresh": false
            }
        }, {
            "path": "pages/tab-bar/api",
            "style": {
                "navigationBarTitleText": "%index.api%",
                "enablePullDownRefresh": false
            }
        }, {
            "path": "pages/tab-bar/schema",
            "style": {
                "navigationBarTitleText": "%index.schema%",
                "enablePullDownRefresh": false
            }
        }, {
            "path": "pages/common/blank",
            "style": {
                "navigationBarTitleText": "空白页",
                "enablePullDownRefresh": false
            }
        }, {
            "path": "pages/apis/contact",
            "style": {
                "navigationBarTitleText": "联系人",
                "enablePullDownRefresh": false
            }
        }, {
            "path": "pages/demo/language",
            "style": {
                "navigationBarTitleText": "国际化",
                "enablePullDownRefresh": false
            }
        }, {
            "path": "pages/demo/lottery",
            "style": {
                "navigationBarTitleText": "抽奖",
                "enablePullDownRefresh": false
            }
        }
    ],
    "tabBar": {
        "color": "#7A7E83",
        "selectedColor": "#007AFF",
        "borderStyle": "black",
        "backgroundColor": "#F8F8F8",
        "list": [{
                "pagePath": "pages/tab-bar/index",
                "text": "%index.home%"
            },
            {
                "pagePath": "pages/tab-bar/component",
                "text": "%index.component%"
            }, {
                "pagePath": "pages/tab-bar/api",
                "text": "%index.api%"
            }, {
                "pagePath": "pages/tab-bar/schema",
                "text": "%index.schema%"
            }
        ]
    },
    "globalStyle": {
        "navigationBarTextStyle": "black",
        "navigationBarTitleText": "uni-app",
        "navigationBarBackgroundColor": "#F8F8F8",
        "backgroundColor": "#F8F8F8"
    }
}