{ // pages数组中第一项表示应用启动页，参考：https://uniapp.dcloud.io/collocation/pages
    "pages": [{
        "path": "pages/tabBar/index",
        "style": {
            "navigationBarTitleText": "%index.title%"
        }
    }, {
        "path": "pages/tabBar/component",
        "style": {
            "navigationBarTitleText": "%index.component%",
            "enablePullDownRefresh": false
        }
    }, {
        "path": "pages/tabBar/api",
        "style": {
            "navigationBarTitleText": "%index.api%",
            "enablePullDownRefresh": false
        }
    }, {
        "path": "pages/tabBar/schema",
        "style": {
            "navigationBarTitleText": "%index.schema%",
            "enablePullDownRefresh": false
        }
    }, {
        "path": "pages/common/blank",
        "style": {
            "navigationBarTitleText": "空白页",
            "enablePullDownRefresh": false
        }
    }],
    "subPackages": [{
        "root": "pages/apis/",
        "pages": [{
            "path": "contact",
            "style": {
                "navigationBarTitleText": "联系人",
                "enablePullDownRefresh": false
            }
        }]
    }, {
        "root": "pages/demo/",
        "pages": [{
            "path": "language",
            "style": {
                "navigationBarTitleText": "国际化",
                "enablePullDownRefresh": false
            }
        }, {
            "path": "lottery",
            "style": {
                "navigationBarTitleText": "抽奖",
                "enablePullDownRefresh": false
            }
        }]
    }],
    "tabBar": {
        "color": "#7A7E83",
        "selectedColor": "#007AFF",
        "borderStyle": "black",
        "backgroundColor": "#F8F8F8",
        "list": [{
                "pagePath": "pages/tabBar/index",
                "text": "%index.home%"
            },
            {
                "pagePath": "pages/tabBar/component",
                "text": "%index.component%"
            }, {
                "pagePath": "pages/tabBar/api",
                "text": "%index.api%"
            }, {
                "pagePath": "pages/tabBar/schema",
                "text": "%index.schema%"
            }
        ]
    },
    "preloadRule": {
        "pages/tabBar/index": {
            "network": "all",
            "packages": ["__APP__"]
        },
        "pages/tabBar/component": {
            "network": "all",
            "packages": ["__APP__"]
        },
        "pages/tabBar/api": {
            "network": "all",
            "packages": ["__APP__"]
        },
        "pages/tabBar/schema": {
            "network": "all",
            "packages": ["__APP__"]
        }
    },
    "uniIdRouter": {
        "loginPage": "pages/login/login",
        "needLogin": [
            "pages/user/.*" // 需要登录才可访问的页面列表，可以使用正则语法
        ],
        "resToLogin": true
    },
    "globalStyle": {
        "navigationBarTextStyle": "black",
        "navigationBarTitleText": "uni-app",
        "navigationBarBackgroundColor": "#F8F8F8",
        "backgroundColor": "#F8F8F8",
        "usingComponents": {
            "van-row": "/wxcomponents/vant/row/index",
            "van-col": "/wxcomponents/vant/col/index",
            "van-cell-group": "/wxcomponents/vant/cell-group/index",
            "van-button": "/wxcomponents/vant/button/index",
            "van-field": "/wxcomponents/vant/field/index"
        }
    }
}